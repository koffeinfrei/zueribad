<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TranslucentZueribad" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:textAppearance">@style/ZueribadTextAppearance</item>
        <item name="android:listViewStyle">@style/ZueribadListViewStyle</item>
        <item name="android:editTextStyle">@style/ZueribadEditTextStyle</item>
        <item name="android:tabWidgetStyle">@style/ZueribadTabWidgetStyle</item>
    </style>

    <!-- TODO define properly and remove all explicit declarations elsewhere -->
    <style name="ZueribadTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ZueribadListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/listview</item>
    </style>

    <style name="ZueribadEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/listview</item>
        <item name="android:textColor">@color/second_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/second_text_color</item>
        <item name="android:textColorHighlight">@color/second_text_color</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="ZueribadTabWidgetStyle" parent="@android:style/Widget.TabWidget">
        <item name="android:tabStripEnabled">false</item>
        <item name="android:background">@drawable/listview</item>
    </style>

</resources>