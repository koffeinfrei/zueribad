	package="org.koffeinfrei.zueribad" android:versionCode="1"
	android:versionName="1.0">
	
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<uses-library android:name="com.google.android.maps" />
	
		<activity android:label="@string/app_name" android:name=".activities.MainTabActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".activities.OverviewActivity"></activity>
		<activity android:name=".activities.FavoritesActivity"></activity>
		<activity android:name=".activities.NearLocationActivity"></activity>
		<activity android:name=".activities.DetailsActivity"></activity>
	</application>
	
	<uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest> 